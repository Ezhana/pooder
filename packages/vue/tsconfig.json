{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@pooder/core": ["../core/src/index.ts"],
      "@pooder/kit": ["../kit/src/index.ts"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["src/**/__tests__/*"]
}
